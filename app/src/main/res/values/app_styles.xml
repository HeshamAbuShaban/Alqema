<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  #############################################################  -->

    <style name="AppSpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:minHeight">@dimen/_44sdp</item>
        <item name="android:background">@drawable/shape_spinner_bg</item>
        <item name="elevation">@dimen/_10sdp</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppDialogButton" parent="PrimaryButton">
        <item name="backgroundTint">@color/calm_gray</item>
        <item name="iconSize">@dimen/_24sdp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="cornerRadius">@dimen/_9sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="elevation">@dimen/_13sdp</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppInformTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:drawableStart">@drawable/ic_info</item>
        <item name="android:text">
            @string/kindly_take_into_account_the_long_click_on_the_item_for_data_editing
        </item>
        <item name="android:textColor">#E6303F9F</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">#512DA8</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppDateTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:drawableStart">@drawable/ic_date</item>
        <item name="android:textColor">@color/calm_gray</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="drawableTint">@color/calm_gray</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppDeleteButton" parent="PrimaryButton">
        <item name="android:backgroundTint">@color/red_deleting</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/delete</item>
    </style>

    <!--  #############################################################  -->
    <style name="AppScrollView" parent="Theme.Material3.Dark">
        <item name="android:scrollbars">none</item>
    </style>
    <!--  #############################################################  -->

    <style name="ToolBarTitleAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>