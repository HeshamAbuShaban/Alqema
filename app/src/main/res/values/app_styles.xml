<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  #############################################################  -->

    <style name="AppSpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:minHeight">@dimen/_44sdp</item>
        <item name="android:background">@drawable/shape_spinner_bg</item>
        <item name="elevation">@dimen/_10sdp</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppDialogButton" parent="PrimaryButton">
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="cornerRadius">@dimen/_9sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="elevation">@dimen/_13sdp</item>
    </style>

</resources>