<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Alqema" parent="Theme.Material3.DayNight.NoActionBar">
        <!--StatsBar-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--StatsBar-->

        <item name="android:windowBackground">@color/less_white</item>
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/dark_sea</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:fontFamily">@font/cairo_medium</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/cairo_medium</item>

    </style>

    <style name="Theme.Alqema" parent="Base.Theme.Alqema" />

    <!--  #############################################################  -->

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:minHeight">@dimen/_48sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">@dimen/_14sdp</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/less_white</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppBottomSheetLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@color/less_white</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppItemLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@color/less_white</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppItemMiniLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@color/item_bg</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppItemMiniText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/item_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColorHint">@color/less_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppTitleText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <!--<item name="android:textColorHint">@color/less_black</item>-->
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color_rec</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:background">@drawable/shape_text_field_text_input</item>
        <item name="android:textColorHint">@color/less_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  #############################################################  -->


    <style name="AppExpandItemButton" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/less_black</item>
    </style>

</resources>