<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Alqema" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/less_white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/cairo_medium</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
        <item name="fontFamily">@font/cairo_medium</item>
    </style>

    <style name="Theme.Alqema" parent="Base.Theme.Alqema" />

    <!--  #############################################################  -->

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="cornerRadius">@dimen/_4sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">@dimen/_15sdp</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/less_white</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColorHint">@color/less_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppTitleText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <!--<item name="android:textColorHint">@color/less_black</item>-->
        <item name="android:textColor">@color/primary_color_rec</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:background">@drawable/shape_text_field_text_input</item>
        <item name="android:textColorHint">@color/less_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  #############################################################  -->

</resources>