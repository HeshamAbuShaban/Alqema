<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Alqema" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/night_window_background_color</item>

        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/calm_gray</item>
        <item name="colorPrimary">@color/primary_color_rec</item>
        <item name="fontFamily">@font/cairo_medium</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppLayout" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/less_grey</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppItemLayout" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@color/less_black_time2</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppItemMiniLayout" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@color/item_bg_dark</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppItemMiniText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/item_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColorHint">@color/less_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  #############################################################  -->

    <style name="AppTitleText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <!--        <item name="android:textColorHint">@color/less_black</item>-->
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--  #############################################################  -->

    <style name="AppTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:background">@drawable/shape_text_field_text_input</item>
        <item name="android:textColorHint">@color/less_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>